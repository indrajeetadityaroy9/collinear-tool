# Collinear Tool API Configuration Example
# Copy this file to .env and update with your values

# === Supabase Configuration ===
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_JWT_SECRET=your-jwt-secret

# === Hugging Face Configuration ===
# Required for dataset fetching
HF_API_TOKEN=hf_your_token_here
# Alternative environment variable name
# HUGGINGFACEHUB_API_TOKEN=hf_your_token_here

# === Redis Configuration ===
# Redis connection URL
REDIS_URL=redis://localhost:6379/0
# Optional Redis password
# REDIS_PASSWORD=your-redis-password
# Enable/disable Redis caching
ENABLE_REDIS_CACHE=True

# === Security Configuration ===
# Secret key for JWT tokens (change in production!)
SECRET_KEY=change-me-in-production-use-a-long-random-string
# Access token expiration in minutes (default: 7 days)
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# === CORS Configuration ===
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# === Worker Configuration ===
# Number of concurrent Celery workers
WORKER_CONCURRENCY=10
# Dataset batch processing chunk size
DATASET_BATCH_CHUNK_SIZE=50

# === API Configuration ===
# API server host
API_HOST=0.0.0.0
# API server port
API_PORT=8000
# Enable hot reload for development
API_RELOAD=False

# === Logging Configuration ===
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# === Docker Compose Specific ===
# These are set automatically by docker-compose.yml
# UVICORN_HOST=0.0.0.0
# UVICORN_PORT=8000
# MODE=scheduler  # For celery scheduler service
# CELERY_QUEUE=dataset_impacts